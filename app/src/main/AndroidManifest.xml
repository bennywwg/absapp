<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.benny.apptest2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_plate_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_plate_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterPage"
            android:parentActivityName=".SplashScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginPage"
            android:parentActivityName=".SplashScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Test_WorkoutView"
            android:label="@string/title_activity_test__workout_view"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreen2"
            android:label="@string/title_activity_splash_screen2"
            android:screenOrientation="portrait" ></activity>


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>